   assign ifc_config_data_to_gc = sc_jtag2gc_ifc_data; //`$sc_jtag2gc_ifc->get_instance_name()`.data;
   assign ifc_config_op_to_gc = sc_jtag2gc_ifc_op; //`$sc_jtag2gc_ifc->get_instance_name()`.op;
